<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.archive.ArchiveFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/comicsList"
        android:alpha="0"
        tools:listitem="@layout/comic_home_list_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:id="@+id/noComicsContainer"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/noComicsImg"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:src="@drawable/donald_no_comics"/>
        <TextView
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:text="@string/no_comics_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/noComicsTxt"
            android:text="@string/no_comics_description"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>