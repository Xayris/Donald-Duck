<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    xmlns:tools="http://schemas.android.com/tools">
    <ImageView
        android:id="@+id/coverImg"
        android:contentDescription="@string/cdesc_coverImg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/cover_placeholder"
        android:scaleType="fitXY"
        android:layout_width="100dp"
        android:layout_height="165dp" />
    <TextView
        android:id="@+id/issueDateTxt"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/coverImg"
        app:layout_constraintTop_toTopOf="@id/coverImg"
        android:textSize="20sp"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:textAllCaps="true"
        tools:text="SETTEMBRE 2022"
        android:layout_margin="20dp"
        android:fontFamily="@font/harvats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/issueTxt"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/coverImg"
        app:layout_constraintTop_toBottomOf="@id/issueDateTxt"
        android:textSize="18sp"
        tools:text="n. 496"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/harvats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/nextUnreadStoryTxt"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/coverImg"
        app:layout_constraintTop_toBottomOf="@id/issueTxt"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="16sp"
        tools:text="LOREM IPSUM DOLOR"
        android:textAllCaps="true"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="3"
        android:shadowRadius="3"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/futurino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/storiesProgressTxt"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        tools:text="5/7"
        android:shadowColor="@color/text_shadow"
        android:shadowDx="1"
        android:shadowDy="3"
        android:shadowRadius="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/comicProgressBar"
        app:layout_constraintTop_toTopOf="@id/comicProgressBar"
        app:layout_constraintBottom_toBottomOf="@id/comicProgressBar"
        android:fontFamily="@font/harvats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/comicProgressBar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        app:trackThickness="17dp"
        app:trackCornerRadius="10dp"
        android:progress="50"
        android:max="100"
        app:trackColor="@color/yellow_bg"
        app:indicatorColor="@color/yellow"
        android:progressTint="@color/yellow"
        app:layout_constraintTop_toBottomOf="@id/nextUnreadStoryTxt"
        app:layout_constraintStart_toEndOf="@id/coverImg"
        app:layout_constraintEnd_toStartOf="@id/storiesProgressTxt"
        android:layout_height="wrap_content"
        android:layout_width="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>