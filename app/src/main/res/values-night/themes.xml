<resources>
    <style name="Theme.DonaldDuck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red_bg</item>
        <item name="colorOnPrimary">@color/red</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowBackground">@color/red</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="Theme.DonaldDuck.Dialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:background">@color/red</item>
        <item name="android:fontFamily">@font/futurino</item>
        <item name="android:textAllCaps">true</item>
        <item name="titleTextColor">@android:color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="ComicIssueCard.Corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">3dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ComicArchive.Tab" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/futurino</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Popup" parent="ThemeOverlay.AppCompat.DayNight" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/red_bg</item>
        <item name="android:fontFamily">@font/futurino</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="NavBar">
        <item name="fontFamily">@font/futurino</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>