<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.ComicDetailFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/infoContainer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/storiesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/coverImg"
            android:contentDescription="@string/cdesc_coverImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="15dp"
            android:layout_width="155dp"
            android:layout_height="225dp"/>
        <TextView
            android:id="@+id/issueDateTxt"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/coverImg"
            app:layout_constraintTop_toTopOf="@id/coverImg"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:textAllCaps="true"
            tools:text="SETTEMBRE 2022"
            android:layout_margin="20dp"
            android:fontFamily="@font/harvats"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/issueTxt"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toEndOf="@id/coverImg"
            app:layout_constraintTop_toBottomOf="@id/issueDateTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="25sp"
            tools:text="n. 496"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="3"
            android:shadowRadius="3"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/harvats"
            android:layout_marginTop="5dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteComicBtn"
            android:visibility="gone"
            android:fontFamily="@font/futurino"
            app:layout_constraintTop_toBottomOf="@id/issueTxt"
            app:layout_constraintStart_toEndOf="@id/coverImg"
            app:backgroundTint="@color/yellow"
            android:text="@string/delete_comic"
            app:icon="@drawable/ic_delete"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/storiesList"
        tools:listitem="@layout/story_list_item"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/infoContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>